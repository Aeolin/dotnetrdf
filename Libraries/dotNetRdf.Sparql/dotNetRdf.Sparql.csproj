<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netstandard2.0</TargetFrameworks>
    <RootNamespace>VDS.RDF</RootNamespace>
    <LangVersion>latest</LangVersion>
    <!-- Assembly metadata -->
    <AssemblyName>dotNetRdf.Sparql</AssemblyName>
    <AssemblyTitle>dotNetRDF SPARQL Client Library</AssemblyTitle>
    <Description>Provides APIs for building, parsing and writing SPARQL queries and updates.</Description>
    <!-- NuGet packaging -->
    <PackageId>dotNetRdf.Sparql</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\dotNetRDF\dotNetRDF.csproj" />
    <InternalsVisibleTo Include="dotNetRdf.InMemory" />
    <InternalsVisibleTo Include="dotNetRdf.Test" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Parsing\Contexts\" />
    <Folder Include="Parsing\Tokens\" />
    <EmbeddedResource Include="Query\Expressions\LeviathanFunctionLibrary.ttl" />
    <EmbeddedResource Include="Query\Optimisation\OptimiserStats.ttl" />
  </ItemGroup>

</Project>
